<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css?family=Karla:400,700&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/498969099a.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/public/styles/global.css">
  <link rel="stylesheet" href="/public/styles/custom.css">
  <link rel="stylesheet" href="/public/styles/pages/company/projects-create.css">
  <link rel="stylesheet" href="/public/styles/partials/header.css">
  <link rel="stylesheet" href="/public/styles/partials/sideBar.css">
  <title>Empresa - registrar projeto</title>
</head>
<body>
  <div id="viewport">
    <%- include('../../partials/sideBar.ejs') %> 
    <div id="content">
      <%- include('../../partials/header.ejs') %>
      <h1 class="m-5">Registrar projeto</h1> 
      <div class="m-5">
        <form action="" method="post">
          <div class="row mb-3">
            <div class="col">
              <label for="name">Nome</label>
              <input type="text" class="form-control" id="name" placeholder="Jornal da USP">
            </div>
            <div class="col">
              <label for="social-name">Descrição</label>
              <textarea class="form-control" id="description" placeholder="Jornal para divulgar informações diárias da Universidade de São Paulo"></textarea>
            </div>
          </div>
          <div class="col w-50 mb-5">
            <label for="squad">Squad responsável</label>
            <select type="text" class="form-control" id="squad">
              <% squads.forEach(({ id, name }) => { %>
                <option value="<%- id %>"><%- name %></option>
              <% }) %> 
            </select>
          </div>
          <div class="d-block">
            <button type="submit" class="btn btn-primary w-25 text-white py-2">Registrar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
</html>