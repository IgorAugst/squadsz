{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@controllers": [
        "src/controllers"
      ],
      "@db": [
        "src/db"
      ],
      "@views": [
        "src/views"
      ],
      "@models": [
        "src/models"
      ],
      "@config": [
        "src/config"
      ]
    },
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}