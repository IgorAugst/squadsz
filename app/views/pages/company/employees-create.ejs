<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css?family=Karla:400,700&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/498969099a.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/public/styles/css/global.css">
  <link rel="stylesheet" href="/public/styles/css/custom.css">
  <link rel="stylesheet" href="/public/styles/css/pages/company/employees-create.css">
  <link rel="stylesheet" href="/public/styles/css/partials/header.css">
  <link rel="stylesheet" href="/public/styles/css/partials/side-bar.css">
  <title>Empresa - registrar funcionário</title>
</head>
<body>
  <div id="viewport">
    <%- include('../../partials/side-bar.ejs') %> 
    <div id="content">
      <%- include('../../partials/header.ejs') %>
      <h1 class="m-5">Registrar funcionário</h1> 
      <div class="m-5">
        <form action="" method="post">
          <div class="row mb-3">
            <div class="col">
              <label for="name">Nome</label>
              <input type="text" class="form-control" name="name" id="name" placeholder="Nicholas Fraga Mascarenhas">
            </div>
            <div class="col">
              <label for="social_name">Nome social (opcional)</label>
              <input type="text" class="form-control" name="social_name" id="social_name" placeholder="">
            </div>
          </div>
          <div class="row mb-3">
            <div class="col">
              <label for="birth_date">Data de nascimento</label>
              <input type="text" class="form-control" name="birth_date" id="birth_date" placeholder="11/02/1993">
            </div>
            <div class="col">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="email" id="email" placeholder="nichofra@gmail.com">
            </div>
          </div>
          <div class="row mb-3">
            <div class="col">
              <label for="gender" >Sexo</label>
              <select type="text" class="form-control" name="gender" id="gender">
                <option value="Masculino">Masculino</option>
                <option value="Feminino">Feminino</option>
                <option value="Não-binário">Não-binário</option>
                <option value="Outro">Outro</option>
              </select>
            </div>
            <div class="col">
              <label for="squad">Squad (opcional)</label>
              <select type="text" class="form-control" name="squad" id="squad">
                <option value=""></option>
                <% squads.forEach(({ id, name }) => { %>
                  <option value="<%- id %>"><%- name %></option>
                <% }) %> 
              </select>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col">
              <label for="password">Senha</label>
              <input type="password" name="password" id="password" class="form-control" placeholder="**********">
            </div>
            <div class="col">
              <label for="confirm_password">Repetir senha</label>
              <input type="password" name="confirm_password" id="confirm_password" class="form-control" placeholder="**********">
            </div>
          </div>
          <div class="col w-50 mb-5">
            <label for="office">Cargo</label>
            <input type="text" class="form-control" name="office" id="office" placeholder="Front-end">
          </div>
          <div class="d-block">
            <button type="submit" class="btn btn-primary w-25 text-white py-2">Registrar</button>
          </div>
        </form>
      </div>
      <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger m-5" role="alert">
          <ul>
            <% errors.forEach((error) => { %>
              <li><%= error.message %></li>
            <% }) %>
          </ul>
        </div>
      <% } %> 
      <% if (messages.success_msg) { %> 
        <div class="alert alert-success m-5">
          <%= messages.success_msg %>
        </div>
      <% } %>
      <% if (messages.error_msg) { %> 
        <div class="alert alert-danger m-5">
          <%= messages.error_msg %>
        </div>
      <% } %>
    </div>
  </div>
  <script src="/public/scripts/dropdown.js"></script>
</body>
</html>